---
import Layout from "../layouts/Layout.astro";
import { Hero } from "../components/Hero";
import { SiteHeader } from "../components/SiteHeader";
import { SiteFooter } from "../components/SiteFooter";
import { AnimateOnScroll } from "../components/AnimateOnScroll";
import { BrandMarquee } from "../components/BrandMarquee";
import { DepartmentsSection } from "../components/DepartmentsSection";
import { VideoShowcase } from "../components/VideoShowcase";
import { SectionHeading } from "../components/SectionHeading";
import { FormInput } from "../components/ui/FormInput";
import { Button } from "../components/ui/Button";
import { EmailIcon } from "../components/icons/FormIcons";
import { departments, partnerLogos } from "../lib/siteData";
import {
  generateBreadcrumbSchema,
  generateFAQSchema,
} from "../lib/seo";

const announcements = [
  {
    title: "Payment for summer 2024 (Social study)",
    range: "Aug 22, 2024 to Oct 11, 2024",
    image: "/announcements/announcement-1.jpg",
  },
  {
    title: "Summer 2024 Pharmacy Payment Reminder",
    range: "Aug 22, 2024 to Oct 11, 2024",
    image: "/announcements/announcement-2.jpg",
  },
  {
    title: "Important: Pharmacy Payment for Summer 2024",
    range: "Aug 22, 2024 to Oct 11, 2024",
    image: "/announcements/announcement-3.jpg",
  },
];

const facts = [
  { label: "Student Nationalities", value: "100+" },
  { label: "International Students", value: "25%" },
  { label: "Different Majors", value: "20" },
];

const galleryImages = Array.from({ length: 20 }).map(
  (_, index) => `/gallery/gallery-${index + 1}.jpg`
);

const galleryRow = galleryImages.slice(0, 8);
const duplicatedGalleryRow = galleryRow.concat(galleryRow);

// FAQ Schema for homepage
const homeFAQs = [
  {
    question: "What programs does Eduvet University offer?",
    answer:
      "Eduvet University offers a wide range of programs in Social Science including Psychology, Sociology, Political Science, Anthropology, Economics, International Relations, Geography, and Physics. We focus on generating new knowledge and promoting critical thinking.",
  },
  {
    question: "When was Eduvet University founded?",
    answer:
      "Eduvet University was founded in 1990 and has since become one of the most reputed educational institutions in NYC, graduating more than 7,000 students.",
  },
  {
    question: "Where is Eduvet University located?",
    answer:
      "Eduvet University is located in New York City, specifically at 12/A, New Booston Tower, NYC. We are one of the largest universities in NYC.",
  },
  {
    question: "How can I apply to Eduvet University?",
    answer:
      "You can apply to Eduvet University by visiting our website and clicking the 'Apply Now' button. You can also contact us at +8 (378) 389 092 or email us at contactinfo@gmail.com for more information.",
  },
];

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Home", url: "/" },
]);

const faqSchema = generateFAQSchema(homeFAQs);
---

<Layout
  title="Eduvet University - Top Educational Institution in NYC | Quality Education Since 1990"
  description="Eduvet University is one of the most reputed educational institutions in NYC, offering quality education since 1990. Explore our programs in Social Science, Psychology, Sociology, and more. Join 7,000+ successful graduates."
  path="/"
  keywords={[
    "university NYC",
    "higher education New York",
    "social science programs",
    "psychology degree NYC",
    "sociology courses",
    "quality education",
  ]}
  image="/images/hero-student.jpg"
>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)}></script>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>
  
  <div class="bg-white text-[#1F3050]">
    <SiteHeader client:load></SiteHeader>

    <main class="flex flex-col gap-12 sm:gap-16 md:gap-20 lg:gap-24 bg-white pb-12 sm:pb-16 md:pb-20 lg:pb-24 pt-0">
      <Hero client:load />
      
      <section class="bg-[#FDFDFD] py-12 sm:py-16 md:py-20 lg:py-24">
        <AnimateOnScroll client:visible>
        <div class="app-container flex w-full min-h-[500px] sm:min-h-[600px] md:min-h-[700px] lg:h-auto flex-col-reverse gap-8 sm:gap-10 md:gap-12 lg:flex-row lg:items-center lg:gap-16">
            <div class="relative flex flex-[1.2] justify-center lg:justify-start w-full">
              <div class="relative h-[300px] w-[240px] sm:h-[400px] sm:w-[320px] md:h-[450px] md:w-[360px] lg:h-[500px] lg:w-[390px] max-w-full mx-auto lg:mx-0">
                <div class="absolute inset-0 bg-white shadow-[0px_30px_80px_rgba(111,23,41,0.12)] rounded-sm">
                  <img
                    src="/images/founder-main.jpg"
                    alt="Eduvet University Founder - Leading Quality Education Since 2001"
                    class="object-cover object-center h-full w-full"
                  />
                </div>
                <div class="absolute -bottom-6 -left-6 sm:-bottom-8 sm:-left-8 md:-bottom-12 md:-left-20 lg:-bottom-16 lg:-left-12 xl:-bottom-30 xl:left-44 h-[180px] w-[180px] sm:h-[220px] sm:w-[220px] md:h-[280px] md:w-[280px] lg:h-[320px] lg:w-[320px] xl:h-[380px] xl:w-[380px] border-2 sm:border-[3px] md:border-4 border-white bg-white shadow-[0px_25px_80px_rgba(31,58,95,0.15)] overflow-hidden">
                  <img
                    src="/images/founder-mentor.jpg"
                    alt="Eduvet University Mentor Guiding Student - Academic Excellence"
                    class="object-cover object-center h-full w-full"
                  />
                </div>
              </div>
            </div>

            <div class="flex flex-[0.8] flex-col justify-center gap-4 sm:gap-6 md:gap-8 text-center lg:text-left">
              <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-semibold leading-tight text-[#1B1B1B] break-words">
                Message from the main
                <span class="text-[#B0384F]">founder</span>
              </h2>

              <h3 class="text-base sm:text-lg md:text-xl font-semibold leading-snug text-[#1B1B1B]">
                We have focused on generating new knowledge and promoting
                critical thinking amongst our students.
              </h3>

              <div class="border-l-4 border-[#7A1D32] pl-4 sm:pl-5 md:pl-6 text-sm sm:text-base md:text-lg font-medium text-[#4D4D4D]">
                Since its inception in 2001, Eduvet University has become
                one of the most reputed educational institution in NYC.
              </div>

              <div class="flex flex-col gap-2 pt-2 sm:pt-3 md:pt-4 text-[#1B1B1B] items-center lg:items-start">
                <div class="flex items-center gap-3 sm:gap-4">
                  <div class="h-10 w-10 sm:h-12 sm:w-12 md:h-14 md:w-14 overflow-hidden rounded-full border border-[#E2CAD0]">
                    <img
                      src="/images/hero-student.jpg"
                      alt="Founder avatar"
                      width="56"
                      height="56"
                      class="h-full w-full object-cover"
                    />
                  </div>
                  <div>
                    <p class="text-sm sm:text-base font-semibold">
                      Founder
                    </p>
                    <p class="text-base sm:text-lg md:text-xl font-semibold">
                      Amelia K. Hamilton
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </AnimateOnScroll>
      </section>

      <section class="bg-[#651224] py-12 sm:py-16 md:py-20 lg:py-24 text-white">
        <AnimateOnScroll client:visible>
          <div class="app-container flex min-h-[600px] sm:min-h-[700px] md:min-h-[800px] w-full flex-col items-center justify-center gap-8 sm:gap-10 md:gap-12">
            <div class="text-center">
              <p class="text-xs sm:text-sm font-semibold uppercase tracking-[0.4em] sm:tracking-[0.6em] text-[#F3C4CC]">
                why choose eduvet
              </p>
              <h2 class="mt-4 sm:mt-6 text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-semibold leading-tight px-2 sm:px-4">
                One of the Largest Universities in NYC
              </h2>
            </div>
            <div class="grid w-full gap-6 sm:gap-8 md:grid-cols-2 lg:grid-cols-3">
              <div class="flex flex-col items-center gap-4 sm:gap-6 md:gap-8 border border-[#8F4D5C] bg-transparent px-6 sm:px-8 md:px-10 py-8 sm:py-12 md:py-16 text-center border-t-4 sm:border-t-6">
                <div class="flex h-14 w-14 sm:h-16 sm:w-16 md:h-20 md:w-20 items-center justify-center">
                  <img
                    src="/icons/degree.svg"
                    alt="Degree icon"
                    width={60}
                    height={60}
                    class="h-full w-full object-contain"
                  />
                </div>
                <div class="space-y-3 sm:space-y-4 md:space-y-5">
                  <h3 class="text-xl sm:text-2xl font-semibold">
                    Top Degrees
                  </h3>
                  <p class="text-sm sm:text-base leading-relaxed text-[#F5E0E4]">
                    Offering a wide range of programs across multiple
                    disciplines.
                  </p>
                </div>
              </div>

              <div class="flex flex-col items-center gap-4 sm:gap-6 md:gap-8 border border-[#8F4D5C] bg-transparent px-6 sm:px-8 md:px-10 py-8 sm:py-12 md:py-16 text-center border-t-4 sm:border-t-6">
                <div class="flex h-14 w-14 sm:h-16 sm:w-16 md:h-20 md:w-20 items-center justify-center">
                  <img
                    src="/icons/brain.svg"
                    alt="Brain icon"
                    width={60}
                    height={60}
                    class="h-full w-full object-contain"
                  />
                </div>
                <div class="space-y-3 sm:space-y-4 md:space-y-5">
                  <h3 class="text-xl sm:text-2xl font-semibold">
                    Expert Faculty
                  </h3>
                  <p class="text-sm sm:text-base leading-relaxed text-[#F5E0E4]">
                    Learn from leading professionals and academic experts.
                  </p>
                </div>
              </div>

              <div class="flex flex-col items-center gap-4 sm:gap-6 md:gap-8 border border-[#8F4D5C] bg-transparent px-6 sm:px-8 md:px-10 py-8 sm:py-12 md:py-16 text-center border-t-4 sm:border-t-6 md:col-span-2 lg:col-span-1">
                <div class="flex h-14 w-14 sm:h-16 sm:w-16 md:h-20 md:w-20 items-center justify-center">
                  <img
                    src="/icons/book.svg"
                    alt="Book icon"
                    width={60}
                    height={60}
                    class="h-full w-full object-contain"
                  />
                </div>
                <div class="space-y-3 sm:space-y-4 md:space-y-5">
                  <h3 class="text-xl sm:text-2xl font-semibold">
                    Extensive Library
                  </h3>
                  <p class="text-sm sm:text-base leading-relaxed text-[#F5E0E4]">
                    Access to a comprehensive collection of resources.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </AnimateOnScroll>
      </section>

      <section class="bg-white py-12 sm:py-16 md:py-20 lg:py-24 overflow-x-hidden">
        <div class="app-container w-full"></div>
        <AnimateOnScroll client:visible>
          <div class="relative left-1/2 mt-8 sm:mt-10 md:mt-12 lg:mt-14 w-screen -translate-x-1/2 px-2 sm:px-4 md:px-[4vw] lg:px-[6vw]">
            <div class="gallery-marquee-full flex items-center gap-6 sm:gap-8 md:gap-12 lg:gap-16 xl:gap-20">
              {duplicatedGalleryRow.map((src, index) => {
                const isLarge = index % 2 === 0;
                const sizeClass = isLarge
                  ? "h-[200px] w-[200px] sm:h-[300px] sm:w-[300px] md:h-[450px] md:w-[450px] lg:h-[550px] lg:w-[550px] xl:h-[650px] xl:w-[650px]"
                  : "h-[150px] w-[150px] sm:h-[220px] sm:w-[220px] md:h-[350px] md:w-[350px] lg:h-[400px] lg:w-[400px] xl:h-[450px] xl:w-[450px]";
                const divClass = "relative shrink-0 overflow-hidden bg-white " + sizeClass;
                return (
                  <div class={divClass}>
                    <img
                      src={src}
                      alt={`Eduvet University Campus Gallery - Image ${index + 1}`}
                      class="object-cover object-center h-full w-full"
                    />
                  </div>
                );
              })}
            </div>
          </div>
        </AnimateOnScroll>
      </section>

      <DepartmentsSection departments={departments} />

      <section class="bg-white py-12 sm:py-16 md:py-20">
        <AnimateOnScroll client:visible>
          <BrandMarquee logos={partnerLogos} />
        </AnimateOnScroll>
      </section>

      <section class="app-container flex w-full flex-col gap-6 sm:gap-8 md:gap-10">
        <AnimateOnScroll client:visible>
          <SectionHeading
            eyebrow="Academic Dates"
            title="Announcements & news feeds"
            align="left"
          />
          <div class="grid gap-6 sm:gap-8 md:grid-cols-2 lg:grid-cols-3 cursor-pointer">
            {announcements.map((announcement, index) => (
              <div
                key={announcement.title}
                class="group flex flex-col gap-3 sm:gap-4"
              >
                <div class="relative h-[200px] sm:h-[250px] md:h-[300px] lg:h-80 w-full overflow-hidden bg-[#E5D2D7]">
                  <img
                    src={announcement.image}
                    alt={`${announcement.title} - Eduvet University Announcement`}
                    class="transform object-cover object-center transition-transform duration-500 group-hover:scale-105 h-full w-full"
                  />
                  <div class="absolute left-3 top-3 sm:left-4 sm:top-4 md:left-6 md:top-6 rounded-md bg-[#651224] px-3 py-1.5 sm:px-4 sm:py-2 md:px-5 md:py-2.5 text-base sm:text-lg md:text-xl font-semibold tracking-[0.2em] text-white">
                    {String(index + 1).padStart(2, "0")}
                  </div>
                </div>
                <div class="space-y-2 sm:space-y-3">
                  <h3 class="text-lg sm:text-xl md:text-2xl font-semibold text-[#1B1B1B]">
                    {announcement.title}
                  </h3>
                  <p class="text-sm sm:text-base uppercase tracking-[0.2em] sm:tracking-[0.3em] text-[#5F5F5F]">
                    {announcement.range}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </AnimateOnScroll>
      </section>
      
      <VideoShowcase client:load></VideoShowcase>

      <section class="bg-white pt-12 sm:pt-16 md:pt-20 lg:pt-24 pb-8 sm:pb-12 md:pb-16 lg:pb-20">
        <AnimateOnScroll client:visible>
          <div class="mx-auto flex w-full max-w-5xl flex-col items-center gap-8 sm:gap-10 md:gap-12 px-4 sm:px-6 text-center">
            <div class="flex flex-col items-center gap-4 sm:gap-5 md:gap-6">
              <img
                src="/icons/hat.svg"
                alt="Graduation hat"
                width={150}
                height={150}
                class="w-20 h-20 sm:w-24 sm:h-24 md:w-32 md:h-32 lg:w-[150px] lg:h-[150px] object-contain"
              />
              <p class="text-xs sm:text-sm font-semibold uppercase tracking-[0.4em] sm:tracking-[0.5em] text-[#B0384F]">
                Fun facts about university
              </p>
              <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-semibold text-[#1B1B1B] px-2 sm:px-4">
                Education, empowering them to
                <span class="text-[#B0384F]"> become leaders</span> who
                make a positive impact on the world.
              </h2>
            </div>
            <div class="flex w-full flex-col gap-6 sm:gap-8 text-[#84404E] md:flex-row md:items-center md:justify-between">
              {facts.map((fact) => (
                <div
                  key={fact.label}
                  class="flex flex-col items-center gap-2 sm:gap-3 text-center"
                >
                  <p class="text-xs sm:text-sm md:text-base uppercase tracking-[0.2em] sm:tracking-[0.3em] text-[#84404E]">
                    {fact.label}
                  </p>

                  <p
                    class="text-3xl sm:text-4xl md:text-5xl font-semibold"
                    style="color: transparent; -webkit-text-stroke: 2px #1B1B1B;"
                  >
                    {fact.value}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </AnimateOnScroll>
      </section>

      <section class="relative z-20 bg-transparent pb-0 -mb-12 sm:-mb-16 md:-mb-20 lg:-mb-[80px]">
        <AnimateOnScroll client:visible>
          <div class="app-container w-full">
            <div class="p-2 sm:p-2.5 md:p-3 lg:p-4 xl:p-5 relative z-20 overflow-hidden bg-white border border-[#E5E5E5] shadow-md lg:h-[500px] lg:grid lg:grid-cols-[630px_1fr]">
              <div class="relative flex justify-center items-center w-full h-full min-h-[240px] sm:min-h-[300px] md:min-h-[360px]">
                <div class="relative w-full h-full bg-white box-border">
                  <img
                    src="/footer/cta.jpg"
                    alt="Eduvet University Students Celebrating Success - Apply for Admission"
                    class="object-cover object-center h-full w-full"
                  />
                </div>
              </div>

              <div class="flex flex-col justify-center gap-3 sm:gap-5 md:gap-10 px-4 sm:px-6 md:px-8 lg:px-10 py-6 sm:py-8 md:py-10 lg:py-12">
                <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-[40px] font-semibold leading-tight text-black">
                  Apply for 
                  <span class="text-[#651224]">
                    admission?
                  </span>
                </h2>

                <p class="text-sm sm:text-base leading-relaxed text-[#666666] break-words">
                  A Place to Provide Students with Enough Knowledge and
                  Skills in a Complex World



                  Are you looking for exceptional education experience?
                  </br>
                  Eduvet might be the place for you.
                </p>

                <form class="flex flex-col gap-0 md:flex-row md:items-stretch">
                  <FormInput
                    type="email"
                    placeholder="Business email"
                    icon={EmailIcon({})}
                    containerClassName="text-sm"
                    className="text-sm"
                  />

                  <Button
                    variant="primary"
                    size="sm"
                    className="gap-2 sm:gap-3 w-full md:w-auto h-full md:-ml-px"
                      showArrow
                  >
                    subscribe 
                  </Button>
                </form>
              </div>
            </div>
          </div>
        </AnimateOnScroll>
      </section>
    </main>

    <SiteFooter></SiteFooter>
  </div>
</Layout>
